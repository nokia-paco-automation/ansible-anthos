apiVersion: v1
kind: ConfigMap
metadata:
  name: sriovdp-config
  namespace: kube-system
data:
  config.json: |
    {
        "resourceList": [
{% for pf in (eth_names) %}
{% if sriov_bool[((loop.index-1)/2)|round(0, 'floor')|int] == true %}
            {
                "resourceName": "sriov_iavf_{{ loop.index }}",
                "resourcePrefix": "gke",
                "selectors": {
                    "pfNames": ["{{pf}}"]
                }
            }
{% if not loop.last %}
            ,
{% endif %}
{% endif %}
{% endfor %}
        ]
    }
