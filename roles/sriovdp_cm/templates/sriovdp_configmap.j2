apiVersion: v1
kind: ConfigMap
metadata:
  name: sriovdp-config
  namespace: kube-system
data:
  config.json: |
    {
        "resourceList": [
{% for pf in (hostvars[inventory_hostname]['eth_name']) %}
            {
                "resourceName": "sriov_iavf_{{ loop.index }}",
                "resourcePrefix": "gke",
                "selectors": {
                    "pfNames": ["{{pf}}"]
                }
            }
{% if not loop.last %}
            ,
{% endif %}
{% endfor %}
        ]
    }
